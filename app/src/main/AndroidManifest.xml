<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.linerapp.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.linerapp.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.linerapp.app.MAINSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.linerapp.app.CompanyActivity"
            android:label="@string/title_activity_company" >
        </activity>
        <activity
            android:name="com.example.linerapp.app.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.linerapp.app.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
